                <WhileWindowPortrait>
                    <Toggle Target="menu_open" />
                </WhileWindowPortrait>
            </Clicked>
        </Button>
        <Button>
            <Text Alignment="Center" Padding="7" Color="#e1b630" FontSize="25">
                Option 2
            </Text>
            <Clicked>
                <WhileWindowPortrait>
                    <Toggle Target="menu_open" />
                </WhileWindowPortrait>
            </Clicked>
        </Button>
        <Button>
            <Text Alignment="Center" Padding="7" Color="#e1b630" FontSize="25">
                Option 3
            </Text>
            <Clicked>
                <WhileWindowPortrait>
                    <Toggle Target="menu_open" />
                </WhileWindowPortrait>
            </Clicked>
        </Button>
    </StackPanel>