                <Toggle Target="menu_open" />
            </Clicked>
            </Panel>
        </WhileWindowPortrait>
        <WhileWindowLandscape>
            <Panel Dock="Top" Height="40" Alignment="Top">
            </Panel>
        </WhileWindowLandscape>
        <Button>
            <Text Alignment="Center" Padding="7" Color="#e1b630" FontSize="25">
                Option 1
            </Text>
